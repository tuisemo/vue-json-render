{
  "name": "@vue-json-render/design-system",
  "version": "0.1.0",
  "description": "Aurora Glass Design System - Unique visual language",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
