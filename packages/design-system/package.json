    "./style.css": "./dist/style.css",
    "./components/*.vue": "./src/components/*.vue"
  },
  "files": ["dist"],
  "scripts": {
    "build": "node build.js",
    "dev": "tsup --watch"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "tsup": "^8.0.2",
    "typescript": "5.9.2",
    "vue": "^3.5.13"
  }
}
